{
  "name": "zhuk-frontend-starter",
  "version": "3.0.0-alpha1",
  "description": "This is a starter kit for doing frontend work",
  "main": "index.html",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/segovia94/frontend-starter"
  },
  "author": "Mark Miller",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build && npm run autoprefixer",
    "autoprefixer": "postcss build/**/*.css --use autoprefixer --replace --no-map",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint '**/sass/**/*.scss'",
    "lint:css-fix": "stylelint '**/sass/**/*.scss' --fix",
    "lint:js": "eslint src --ext .js,jsx,.ts,.tsx",
    "lint:js-fix": "eslint src --ext .js,jsx,.ts,.tsx --fix",
    "lint:watch": "esw -w --clear src --ext .js,jsx,.ts,.tsx"
  },
  "devDependencies": {
    "@snowpack/plugin-run-script": "^2.3.0",
    "@snowpack/plugin-sass": "^1.3.0",
    "autoprefixer": "^10.2.4",
    "breakpoint-sass": "^2.7.1",
    "eslint": "^7.19.0",
    "eslint-watch": "^7.0.0",
    "normalize-scss": "^7.0.1",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "snowpack": "^3.0.11",
    "standard": "^16.0.3",
    "stylelint": "^13.9.0",
    "stylelint-config-sass-guidelines": "^7.1.0"
  }
}
